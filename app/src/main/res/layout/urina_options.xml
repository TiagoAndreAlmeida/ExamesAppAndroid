<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.tiago.exames.HemoOptions">

        <Button
            android:id="@+id/coloracao_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/coloracao" />

        <Button
            android:id="@+id/bilirrubina_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/bilirrubina" />

        <Button
            android:id="@+id/acidourico_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/acidourico" />

        <Button
            android:id="@+id/amil_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/amil" />

        <Button
            android:id="@+id/ph_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/ph" />

        <Button
            android:id="@+id/densidade_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginVertical="5dp"
            android:text="@string/densidade" />

    </LinearLayout>
</ScrollView>
